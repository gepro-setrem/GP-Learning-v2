                    android:text="@string/email" />

                <TextView
                    android:id="@+id/perfilEmail"
                    style="@style/perfilTextValor"
                    android:text="email@email.com" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                style="@style/perfilIcon"
                android:src="@drawable/ic_call_black_24dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/perfilTextLabel"
                    android:text="@string/phone" />

                <TextView
                    android:id="@+id/perfilTelefone"
                    style="@style/perfilTextValor"
                    android:text="9955434293" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                style="@style/perfilIcon"
                android:src="@drawable/ic_supervisor_account_black_24px" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/perfilTextLabel"
                    android:text="@string/classroom" />

                <TextView
                    android:id="@+id/perfilTurma"
                    style="@style/perfilTextValor"
                    android:text="Turma Oficial" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                style="@style/perfilIcon"
                android:src="@drawable/ic_gamepad_black_24dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/perfilTextLabel"
                    android:text="@string/pontuation" />

                <TextView
                    android:id="@+id/perfilPontuacao"
                    style="@style/perfilTextValor"
                    android:text="26 Pontos" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutIndicadores"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="6dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="18dp"
                android:text="@string/averageScoreIndicator"/>

